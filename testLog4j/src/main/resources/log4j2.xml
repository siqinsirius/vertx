<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info">
	<Appenders>
		<RollingFile name="rollingFileAppender" fileName="C:\Users\Siqin\logs\testLog4J.log"
			filePattern="C:\Users\Siqin\logs\testLog4J-%d{yyyy-MM-dd}-%i.log">
			<PatternLayout pattern="%-5p %d [%t] %c{1} - %m%n" />
			<Policies>
				<TimeBasedTriggeringPolicy /> <!-- Rotated everyday -->
				<SizeBasedTriggeringPolicy size="1 KB" /> <!-- Or every 100 MB -->
			</Policies>
		</RollingFile>
		<Console name="STDOUT" target="SYSTEM_OUT">
			<PatternLayout pattern="%-5p %d [%t] (%F:%L) - %m%n" />
		</Console>
	</Appenders>
	<Loggers>
		<Root level="debug">
			<AppenderRef ref="rollingFileAppender" />
			<AppenderRef ref="STDOUT" />
		</Root>
	</Loggers>
</Configuration>
